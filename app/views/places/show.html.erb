
<div class="container mt-4">
  <h1><%= @place["name"] %></h1>
  <% if @current_user != nil %>
    <h2 class="mb-4">My Entries</h2>

    <div class="mb-4">
      <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary" >New Post</a>
    </div>
      
    <div class="row">
      <% for entry in @entries %>
        <%if entry["place_id"] == @place["id"]%>
          <% if entry["user_id"] == @current_user["id"]%>
            <div class="col-md-4 entry">
              <h2><%= entry["title"] %></h2>
              <p><%= entry["occurred_on"] %></p>

              <% if entry.uploaded_image.attached? %>
                <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid">  
              <% else %>
                <img src="<%="path/to/default/image.jpg"%>" class="img-fluid">
              <% end %> 


              <p><%= entry["description"] %></p>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <%else%>
  <%end%>
</div>